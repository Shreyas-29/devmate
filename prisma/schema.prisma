generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid()) @map("_id") @db.ObjectId
  email String @unique

  problems Problem[]
}

enum Status {
  Todo
  Solved
  Attempted
}

model Problem {
  id                  String  @id @default(cuid()) @map("_id") @db.ObjectId
  title               String
  slug                String  @unique
  category            String?
  difficulty          String
  acceptance          String
  status              Status?
  order               Int?
  problemStatement    String
  examples            Json?
  constraints         String?
  starterCode         String?
  handlerFunction     String?
  starterFunctionName String?
  User                User?   @relation(fields: [userId], references: [id])
  userId              String? @db.ObjectId
}
